<h2>Estudantes <%= link_to 'Criar', new_patient_path, class:"btn btn-success pull-right" %></h2>
<br>
<table class="table table-hover">
	<tr>
		<th>Nome</th>
		<th>Usuário</th>
		<th>Ações</th>
		<th></th>
	</tr>
	<% @patients.each do |patient| %>
	<tr>
		<th><%= patient.name, class:"btn btn-link" %></th>
		<th><%= patient.user_id %></th>
		<th><%= link_to 'Editar', edit_patient_path(patient) %></th>
		<th><%= link_to 'Excluir', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?', class:'btn btn-link' } %></th>
	</tr>
	<% end %>
</table>
<%= paginate @patients, theme:"twitter-bootstrap-3" %>
