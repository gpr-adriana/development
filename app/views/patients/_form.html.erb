<%= form_for @patient do |f| %>
	<% if @patient.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@patient.errors.count, "error") %> prevented this patient from saving:</h2>
			<ul>
				<% @patient.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<%= f.label :name, "Nome" %><br>
	<%= f.text_field :name, placeholder:"Digite o nome do aluno", required:"", class:"form-control" %>
	<br>
	
	<br>

	<%= f.label :userId, "user id" %><br>
	<%= f.text_field :user_id, placeholder:"Digite o id", required:"", class:"form-control" %>

	<br>

	<%= f.submit "Ok", class: "btn btn-success" %>
<% end %>
